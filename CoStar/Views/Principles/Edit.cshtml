@model CoStar.Models.ViewModels.PrincipleEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Principle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Principle.PrincipleId" />
            <div class="form-group">
                <p class="control-label">Upload a file using this form:</p>
                <input asp-for="PrincipleFileToSave"><br />
                <span asp-validation-for="PrincipleFileToSave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Principle.PrincipleName" class="control-label"></label>
                <input asp-for="Principle.PrincipleName" class="form-control" />
                <span asp-validation-for="Principle.PrincipleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Principle.PrincipleDescription" class="control-label"></label>
                <textarea asp-for="Principle.PrincipleDescription" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="Principle.PrincipleDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}